{
  "openapi": "3.0.3",
  "info": { "title": "Gamification Service API", "version": "1.0.0" },
  "paths": {
    "/gamification/v1/badges": { "post": { "summary": "Criar badge", "tags": ["badges"], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "required": ["codigo", "nome", "pontos_necessarios"], "properties": { "codigo": { "type": "string" }, "nome": { "type": "string" }, "descricao": { "type": "string" }, "criterio": { "type": "string" }, "icone_url": { "type": "string", "format": "uri" }, "pontos_necessarios": { "type": "integer" } } } } } }, "responses": { "201": { "description": "Criado" }, "409": { "description": "Duplicado" } } } },
    "/gamification/v1/badges/{codigo}": { "get": { "summary": "Obter badge", "tags": ["badges"], "parameters": [{ "name": "codigo", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "OK" }, "404": { "description": "Não encontrado" } } } },
    "/gamification/v1/me": { "get": { "summary": "Perfil gamification do usuário autenticado (mock userId via header X-User-Id)", "tags": ["perfil"], "parameters": [{ "name": "X-User-Id", "in": "header", "required": true, "schema": { "type": "string", "format": "uuid" } }], "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "object", "properties": { "userId": { "type": "string" }, "xp": { "type": "integer" }, "nivel": { "type": "integer" }, "proximoNivelXp": { "type": "integer" }, "badges": { "type": "array", "items": { "type": "object", "properties": { "codigo": { "type": "string" }, "nome": { "type": "string" } } } } } } } } } } } },
    "/gamification/v1/ranking/global": { "get": { "summary": "Ranking global por XP", "tags": ["ranking"], "responses": { "200": { "description": "OK" } } } },
    "/gamification/v1/ranking/departamento": { "get": { "summary": "Ranking por departamento (mock header X-Departamento-Id)", "tags": ["ranking"], "parameters": [{ "name": "X-Departamento-Id", "in": "header", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "OK" } } } }
  }
}